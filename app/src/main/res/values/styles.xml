<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Keyboard.Button" parent="Theme.Calculator">
        <!-- Buttons -->
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:backgroundTint">@color/indigo_button</item>
    </style>

    <!-- Button CE -->
    <style name="Keyboard.Button.CE" >
        <item name="android:layout_margin">@dimen/button_layout_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/orange_button</item>
    </style>

    <!-- Button equals -->
    <style name="Keyboard.Button.Equals" >
        <item name="android:layout_margin">@dimen/button_layout_margin</item>
        <item name="android:layout_weight">@dimen/button_layout_weight</item>
        <item name="android:backgroundTint">@color/dark_blue_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- TextView -->
    <style name="Theme.Calculator.ResultView">
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingVertical">@dimen/default_padding</item>
        <item name="android:textColor">@color/txt_color</item>
    </style>

</resources>